<Window x:Class="Resource_Manager.CreateBarFileDialog"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:local="clr-namespace:Resource_Manager"
				mc:Ignorable="d"
				SizeToContent="WidthAndHeight"
				WindowStartupLocation="CenterScreen"
				UseLayoutRounding="True"
				Title="Create Bar File"
		ResizeMode="NoResize"
		FontFamily="{StaticResource Trajan Pro}"
		FontSize="16">
	<Grid Margin="5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>


		</Grid.RowDefinitions>
		<TextBlock Grid.Row="0"
				Grid.Column="0"
				Text="Game Version: "
				HorizontalAlignment="Left"
				VerticalAlignment="Center"/>
		<ComboBox Margin="5,0,0,0"
				HorizontalContentAlignment="Center"
				x:Name="tbGameVersion"
				Grid.ColumnSpan="2"
				Grid.Row="0"
				Grid.Column="1"
				SelectedIndex="0"
				HorizontalAlignment="Stretch">
			<ComboBoxItem Content="Age of Empires 3: Legacy"/>
			<ComboBoxItem Content="Age of Empires 3: DE"/>
		</ComboBox>
		<TextBlock Grid.Row="1"
				Grid.Column="0"
				Text="Bar Root Folder: "
				HorizontalAlignment="Left"
				VerticalAlignment="Center"/>
		<TextBox VerticalContentAlignment="Center"
				FontSize="14"
				x:Name="tbRootPath"
				IsReadOnly="True"
				Margin="5,5"
				Grid.Row="1"
				Width="250"
				Grid.Column="1"/>
		<TextBlock Grid.Row="2"
							 Grid.Column="0"
							 Text="Bar File Name (without extension): "
							 HorizontalAlignment="Left"
							 VerticalAlignment="Center"/>
		<TextBox VerticalContentAlignment="Center"
						 FontSize="14"
						 x:Name="tbBarName"
						 Margin="5,5"
						 Grid.Row="2"
						 Width="250"
						 Grid.Column="1"
						 Height="22.4"/>
		<Button Margin="5,5,0,5"
				Grid.Row="1"
				HorizontalAlignment="Center"
				Width="100"
				Grid.Column="2"
				Content="Browse..."
				Click="Button_Click"/>
		<Button Margin="0,5"
				Content="Create"
				Grid.Row="3"
				Grid.ColumnSpan="3"
				HorizontalAlignment="Center"
				Width="100"
				Padding="0,3,0,0"
				Click="Button_Click_1"/>
	</Grid>

</Window>
