														<DrawingBrush.Drawing>
															<DrawingGroup>
																<DrawingGroup.Children>
																	<GeometryDrawing Brush="Black"
																			Geometry="M20 18H4V8H20M20 6H12L10 4H4C2.9 4 2 4.9 2 6V18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V8C22 6.9 21.1 6 20 6M12.8 12C12.4 10.8 11.3 10 10 10C8.3 10 7 11.3 7 13S8.3 16 10 16C11.3 16 12.4 15.2 12.8 14H15V16H17V14H19V12H12.8M10 14C9.4 14 9 13.6 9 13C9 12.4 9.4 12 10 12S11 12.4 11 13 10.6 14 10 14Z"/>
																</DrawingGroup.Children>
															</DrawingGroup>
														</DrawingBrush.Drawing>
													</DrawingBrush>

												</Setter.Value>
											</Setter>
										</DataTrigger>
										<DataTrigger Binding="{Binding entryOld.isCompressed}"
												Value="1">
											<Setter TargetName="myImage"
													Property="Fill">
												<Setter.Value>

													<DrawingBrush>
														<DrawingBrush.Drawing>
															<DrawingGroup>
																<DrawingGroup.Children>
																	<GeometryDrawing Brush="Black"
																			Geometry="M20 6H12L10 4H4C2.9 4 2 4.9 2 6V18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V8C22 6.9 21.1 6 20 6M20 18H16V16H14V18H4V8H14V10H16V8H20V18M16 12V10H18V12H16M14 12H16V14H14V12M18 16H16V14H18V16Z"/>
																</DrawingGroup.Children>
															</DrawingGroup>
														</DrawingBrush.Drawing>
													</DrawingBrush>

												</Setter.Value>
											</Setter>
										</DataTrigger>
										<DataTrigger Binding="{Binding entryOld.isCompressed}"
												Value="0">
											<Setter TargetName="myImage"
													Property="Fill"
													Value="Transparent"/>
										</DataTrigger>
									</DataTemplate.Triggers>


								</DataTemplate>
							</GridViewColumn.CellTemplate>
							<GridViewColumn.Header>
								<GridViewColumnHeader Click="files_Click"
										Tag="isCompressed">
									<TextBlock>
                                <Viewbox
											xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
											Width="16"
											Height="16"
											Margin="1,0">
                                    <Rectangle Width="16"
													Height="16">
                                        <Rectangle.Fill>
                                            <DrawingBrush>
                                                <DrawingBrush.Drawing>
                                                    <DrawingGroup>
                                                        <DrawingGroup.Children>
                                                               <GeometryDrawing Brush="Black"
																			Geometry="M20 6H12L10 4H4C2.9 4 2 4.9 2 6V18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V8C22 6.9 21.1 6 20 6M20 18H16V16H14V18H4V8H14V10H16V8H20V18M16 12V10H18V12H16M14 12H16V14H14V12M18 16H16V14H18V16Z"/>
                                                        </DrawingGroup.Children>
                                                    </DrawingGroup>
                                                </DrawingBrush.Drawing>
                                            </DrawingBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Viewbox>
                                <Viewbox
											xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
											Width="16"
											Height="16"
											Margin="1,0">
                                    <Rectangle Width="16"
													Height="16">
                                        <Rectangle.Fill>
                                            <DrawingBrush>
                                                <DrawingBrush.Drawing>
                                                    <DrawingGroup>
                                                        <DrawingGroup.Children>
                                                               <GeometryDrawing Brush="Black"
																			Geometry="M20 18H4V8H20M20 6H12L10 4H4C2.9 4 2 4.9 2 6V18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V8C22 6.9 21.1 6 20 6M12.8 12C12.4 10.8 11.3 10 10 10C8.3 10 7 11.3 7 13S8.3 16 10 16C11.3 16 12.4 15.2 12.8 14H15V16H17V14H19V12H12.8M10 14C9.4 14 9 13.6 9 13C9 12.4 9.4 12 10 12S11 12.4 11 13 10.6 14 10 14Z"/>
                                                         </DrawingGroup.Children>
                                                    </DrawingGroup>
                                                </DrawingBrush.Drawing>
                                            </DrawingBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Viewbox>

									</TextBlock>
								</GridViewColumnHeader>
							</GridViewColumn.Header>
						</GridViewColumn>
						<GridViewColumn x:Name="gvcEntryOldFileName"
								Width="185">
							<GridViewColumn.Header>
								<GridViewColumnHeader
									Click="files_Click"
									Content="File Name"
									Tag="entryOld.FileNameWithRoot"/>
							</GridViewColumn.Header>
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<TextBlock
										Text="{Binding Path=entryOld.FileNameWithRoot}"
										TextTrimming="CharacterEllipsis"
										ToolTip="{Binding Path=entryOld.FileNameWithRoot}"/>
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>
						<GridViewColumn Width="130">
							<GridViewColumn.Header>
								<GridViewColumnHeader
									Click="files_Click"
									Content="File Size (bytes)"
									Tag="entryOld.FileSize2"/>
							</GridViewColumn.Header>
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<TextBlock
										Text="{Binding Path=entryOld.FileSize2, StringFormat=N0}"
										TextAlignment="Right"
										TextTrimming="CharacterEllipsis"/>
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>


						<GridViewColumn Width="80">
							<GridViewColumn.Header>
								<GridViewColumnHeader
									Click="files_Click"
									Content="Hash"
									Tag="entryOld.Hash"/>
							</GridViewColumn.Header>
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<TextBlock
										Text="{Binding Path=entryOld.Hash, StringFormat=X8}"
										TextAlignment="Right"
										TextTrimming="CharacterEllipsis"/>
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>

						<GridViewColumn x:Name="gvcEntryOldlastModifiedDate"
								Width="160">
							<GridViewColumn.Header>
								<GridViewColumnHeader
									Click="files_Click"
									Content="Last Modified date"
									Tag="entryOld.lastModifiedDate"/>
							</GridViewColumn.Header>
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Path=entryOld.lastModifiedDate, StringFormat='yyyy-MM-dd HH:mm:ss.ms'}"
											TextTrimming="CharacterEllipsis"/>
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>



						<GridViewColumn Width="80">
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<TextBlock/>
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>




						<GridViewColumn Width="50">
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<Rectangle
										x:Name="myImage"
										Width="16"
										Height="16"/>
									<DataTemplate.Triggers>
										<DataTrigger Binding="{Binding entryNew.isCompressed}"
												Value="2">
											<Setter TargetName="myImage"
													Property="Fill">
												<Setter.Value>

													<DrawingBrush>
														<DrawingBrush.Drawing>
															<DrawingGroup>
																<DrawingGroup.Children>
																	<GeometryDrawing Brush="Black"
																			Geometry="M20 18H4V8H20M20 6H12L10 4H4C2.9 4 2 4.9 2 6V18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V8C22 6.9 21.1 6 20 6M12.8 12C12.4 10.8 11.3 10 10 10C8.3 10 7 11.3 7 13S8.3 16 10 16C11.3 16 12.4 15.2 12.8 14H15V16H17V14H19V12H12.8M10 14C9.4 14 9 13.6 9 13C9 12.4 9.4 12 10 12S11 12.4 11 13 10.6 14 10 14Z"/>
																</DrawingGroup.Children>
															</DrawingGroup>
														</DrawingBrush.Drawing>
													</DrawingBrush>

												</Setter.Value>
											</Setter>
										</DataTrigger>
										<DataTrigger Binding="{Binding entryNew.isCompressed}"
												Value="1">
											<Setter TargetName="myImage"
													Property="Fill">
												<Setter.Value>

													<DrawingBrush>
														<DrawingBrush.Drawing>
															<DrawingGroup>
																<DrawingGroup.Children>
																	<GeometryDrawing Brush="Black"
																			Geometry="M20 6H12L10 4H4C2.9 4 2 4.9 2 6V18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V8C22 6.9 21.1 6 20 6M20 18H16V16H14V18H4V8H14V10H16V8H20V18M16 12V10H18V12H16M14 12H16V14H14V12M18 16H16V14H18V16Z"/>
																</DrawingGroup.Children>
															</DrawingGroup>
														</DrawingBrush.Drawing>
													</DrawingBrush>

												</Setter.Value>
											</Setter>
										</DataTrigger>
										<DataTrigger Binding="{Binding entryNew.isCompressed}"
												Value="0">
											<Setter TargetName="myImage"
													Property="Fill"
													Value="Transparent"/>
										</DataTrigger>
									</DataTemplate.Triggers>


								</DataTemplate>
							</GridViewColumn.CellTemplate>
							<GridViewColumn.Header>
								<GridViewColumnHeader Click="files_Click"
										Tag="isCompressed">
									<TextBlock>
                                <Viewbox
											xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
											Width="16"
											Height="16"
											Margin="1,0">
                                    <Rectangle Width="16"
													Height="16">
                                        <Rectangle.Fill>
                                            <DrawingBrush>
                                                <DrawingBrush.Drawing>
                                                    <DrawingGroup>
                                                        <DrawingGroup.Children>
                                                               <GeometryDrawing Brush="Black"
																			Geometry="M20 6H12L10 4H4C2.9 4 2 4.9 2 6V18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V8C22 6.9 21.1 6 20 6M20 18H16V16H14V18H4V8H14V10H16V8H20V18M16 12V10H18V12H16M14 12H16V14H14V12M18 16H16V14H18V16Z"/>
                                                        </DrawingGroup.Children>
                                                    </DrawingGroup>
                                                </DrawingBrush.Drawing>
                                            </DrawingBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Viewbox>
                                <Viewbox
											xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
											Width="16"
											Height="16"
											Margin="1,0">
                                    <Rectangle Width="16"
													Height="16">
                                        <Rectangle.Fill>
                                            <DrawingBrush>
                                                <DrawingBrush.Drawing>
                                                    <DrawingGroup>
                                                        <DrawingGroup.Children>
                                                               <GeometryDrawing Brush="Black"
																			Geometry="M20 18H4V8H20M20 6H12L10 4H4C2.9 4 2 4.9 2 6V18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V8C22 6.9 21.1 6 20 6M12.8 12C12.4 10.8 11.3 10 10 10C8.3 10 7 11.3 7 13S8.3 16 10 16C11.3 16 12.4 15.2 12.8 14H15V16H17V14H19V12H12.8M10 14C9.4 14 9 13.6 9 13C9 12.4 9.4 12 10 12S11 12.4 11 13 10.6 14 10 14Z"/>
                                                         </DrawingGroup.Children>
                                                    </DrawingGroup>
                                                </DrawingBrush.Drawing>
                                            </DrawingBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Viewbox>

									</TextBlock>
								</GridViewColumnHeader>
							</GridViewColumn.Header>
						</GridViewColumn>
						<GridViewColumn x:Name="gvcEntryNewFileName"
								Width="185">
							<GridViewColumn.Header>
								<GridViewColumnHeader
									Click="files_Click"
									Content="File Name"
									Tag="entryNew.FileNameWithRoot"/>
							</GridViewColumn.Header>
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<TextBlock
										Text="{Binding Path=entryNew.FileNameWithRoot}"
										TextTrimming="CharacterEllipsis"
										ToolTip="{Binding Path=entryNew.FileNameWithRoot}"/>
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>
						<GridViewColumn Width="130">
							<GridViewColumn.Header>
								<GridViewColumnHeader
									Click="files_Click"
									Content="File Size (bytes)"
									Tag="entryNew.FileSize2"/>
							</GridViewColumn.Header>
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<TextBlock
										Text="{Binding Path=entryNew.FileSize2, StringFormat=N0}"
										TextAlignment="Right"
										TextTrimming="CharacterEllipsis"/>
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>


						<GridViewColumn Width="80">
							<GridViewColumn.Header>
								<GridViewColumnHeader
									Click="files_Click"
									Content="Hash"
									Tag="entryNew.Hash"/>
							</GridViewColumn.Header>
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<TextBlock
										Text="{Binding Path=entryNew.Hash, StringFormat=X8}"
										TextAlignment="Right"
										TextTrimming="CharacterEllipsis"/>
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>

						<GridViewColumn x:Name="gvcEntryNewlastModifiedDate"
								Width="160">
							<GridViewColumn.Header>
								<GridViewColumnHeader
									Click="files_Click"
									Content="Last Modified date"
									Tag="entryNew.lastModifiedDate"/>
							</GridViewColumn.Header>
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Path=entryNew.lastModifiedDate, StringFormat='yyyy-MM-dd HH:mm:ss.ms'}"
											TextTrimming="CharacterEllipsis"/>
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>
					</GridView>
				</ListView.View>
			</ListView>
		</Grid>


		<GridSplitter
			x:Name="gsSplitter"
			Grid.Row="3"
			Grid.Column="0"
			Grid.ColumnSpan="4"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Style="{StaticResource HorizontalGridSplitter}"/>

		<Grid
			x:Name="gPreview"
			Grid.Row="4"
			Grid.Column="0"
			Grid.ColumnSpan="4">
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition Width="*"/>

			</Grid.ColumnDefinitions>
			<TextBlock
				Grid.Row="0"
				FontSize="14"
				Text="{Binding ElementName=BarComparerView, Path=SelectedItem.entryOld.fileNameWithoutPath, StringFormat='File Name: {0}'}"
				TextTrimming="CharacterEllipsis"
				ToolTip="{Binding ElementName=BarComparerView, Path=SelectedItem.entryOld.FileNameWithRoot}"/>
			<TextBlock
				Grid.Row="1"
				FontSize="14"
				Text="{Binding ElementName=BarComparerView, Path=SelectedItem.entryOld.fileFormat, StringFormat='File Format: {0}'}"/>
			<TextBlock
				Grid.Row="2"
				FontSize="14"
				Text="{Binding Bar1.PreviewDdt.DdtInfo, StringFormat='Image Format: {0}'}"/>

			<Grid
				x:Name="ImageViewer1"
				Grid.Row="3"
				Grid.Column="0"
				Visibility="Collapsed">
				<ScrollViewer
					Background="White"
					HorizontalScrollBarVisibility="Visible"
					VirtualizingPanel.ScrollUnit="Pixel">


					<Image
						x:Name="ImagePreview1"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						MouseWheel="ImageViewer1_MouseWheel"
						RenderOptions.BitmapScalingMode="HighQuality"
						RenderTransformOrigin="0.5,0.5">
						<Image.LayoutTransform>
							<TransformGroup>
								<ScaleTransform/>

							</TransformGroup>
						</Image.LayoutTransform>
					</Image>



				</ScrollViewer>
				<TextBlock
					Margin="25"
					Padding="2,4,2,0"
					HorizontalAlignment="Right"
					VerticalAlignment="Bottom"
					Background="#99FFFFFF"
					FlowDirection="RightToLeft"
					MouseDown="TextBlock1_MouseDown"
					Text="{Binding ZoomValue1, StringFormat='Current Zoom: {0}%'}"
					TextAlignment="Center"/>
			</Grid>
			<Grid
				x:Name="ImageViewer2"
				Grid.Row="3"
				Grid.Column="2"
				Visibility="Collapsed">
				<ScrollViewer
					Background="White"
					HorizontalScrollBarVisibility="Visible"
					VirtualizingPanel.ScrollUnit="Pixel">


					<Image
						x:Name="ImagePreview2"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						MouseWheel="ImageViewer2_MouseWheel"
						RenderOptions.BitmapScalingMode="HighQuality"
						RenderTransformOrigin="0.5,0.5">
						<Image.LayoutTransform>
							<TransformGroup>
								<ScaleTransform/>

							</TransformGroup>
						</Image.LayoutTransform>
					</Image>



				</ScrollViewer>
				<TextBlock
					Margin="25"
					Padding="2,4,2,0"
					HorizontalAlignment="Right"
					VerticalAlignment="Bottom"
					Background="#99FFFFFF"
					FlowDirection="RightToLeft"
					MouseDown="TextBlock2_MouseDown"
					Text="{Binding ZoomValue2, StringFormat='Current Zoom: {0}%'}"
					TextAlignment="Center"/>
			</Grid>
			<TextBlock
				Grid.Row="0"
				Grid.Column="2"
				FontSize="14"
				Text="{Binding ElementName=BarComparerView, Path=SelectedItem.entryNew.fileNameWithoutPath, StringFormat='File Name: {0}'}"
				TextTrimming="CharacterEllipsis"
				ToolTip="{Binding ElementName=BarComparerView, Path=SelectedItem.entryNew.FileNameWithRoot}"/>
			<TextBlock
				Grid.Row="1"
				Grid.Column="2"
				FontSize="14"
				Text="{Binding ElementName=BarComparerView, Path=SelectedItem.entryNew.fileFormat, StringFormat='File Format: {0}'}"/>
			<TextBlock
				Grid.Row="2"
				Grid.Column="2"
				FontSize="14"
				Text="{Binding Bar2.PreviewDdt.DdtInfo, StringFormat='Image Format: {0}'}"/>

			<avalonEdit:TextEditor
				x:Name="XMLViewer1"
				Grid.Row="3"
				FontFamily="Consolas"
				FontSize="10pt"
				IsReadOnly="True"
				ScrollViewer.ScrollChanged="XMLViewer1_ScrollChanged"
				ScrollViewer.VerticalScrollBarVisibility="Hidden"
				ShowLineNumbers="True"
				SyntaxHighlighting="Diff"
				VirtualizingPanel.ScrollUnit="Pixel"
				Visibility="Collapsed"/>

			<GridSplitter
				x:Name="Splitter"
				Grid.Row="0"
				Grid.RowSpan="5"
				Grid.Column="1"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				Style="{StaticResource VerticalGridSplitter}"/>
			<avalonEdit:TextEditor
				x:Name="XMLViewer2"
				Grid.Row="3"
				Grid.Column="2"
				FontFamily="Consolas"
				FontSize="10pt"
				IsReadOnly="True"
				ScrollViewer.ScrollChanged="XMLViewer2_ScrollChanged"
				ShowLineNumbers="True"
				SyntaxHighlighting="Diff"
				VirtualizingPanel.ScrollUnit="Pixel"
				Visibility="Collapsed"/>

		</Grid>

	</Grid>
</Window>
